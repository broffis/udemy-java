package com.in28minutes.arrays;

import java.math.BigDecimal;

public class Student {
	private int[] marks;
	private String name;

	Student(String name, int[] marks) {
		this.name = name;
		this.marks = marks;
	}

	int getNumberOfMarks() {
		return marks.length;
	}

	int getTotalSumOfMarks() {
		int sum = 0;

		for (int i = 0; i < marks.length - 1; i++) {
			sum += marks[i];
		}

		return sum;
	}

	int getMaximumMark() {
//		int[] sorted = marks;
//		Arrays.sort(sorted);
//
//		return sorted[sorted.length - 1];

		int maximum = 0;
		for (int mark : marks) {
			if (mark > maximum) {
				maximum = mark;
			}
		}

		return maximum;
	}

	int getMinimumMark() {
//		int[] sorted = marks;
//		Arrays.sort(sorted);
//
//		return sorted[0];

		int minimum = 0;
		for (int mark : marks) {
			if (mark < minimum) {
				minimum = mark;
			}
		}

		return minimum;
	};

	int getAverageMarks() {
		int sum = 0;

		for (int i = 0; i < marks.length - 1; i++) {
			sum += marks[i];
		}

		BigDecimal avg = new BigDecimal(sum / marks.length);

		return sum / marks.length;
	};

}

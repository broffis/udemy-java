package com.in28days.loops;

public class MyNumber {
	private int myNum;

	MyNumber(int num) {
		this.myNum = num;
	}

	boolean isPrime() {
		if (myNum < 2) {
			return false;
		}

		for (int i = 2; i < myNum; i++) {
			int mod = myNum % i;

			if (mod == 0) {
				return false;
			}
		}
		return true;
	}

	int sumUpToN() {
		int sum = 0;
		for (int i = 1; i <= myNum; i++) {
			sum += i;
		}

		return sum;
	}

	void printNumberTriangle() {
		String printed = "// ";
		for (int i = 1; i <= myNum; i++) {
			System.out.println(printed);
			printed += i + " ";

		}
	}
}
